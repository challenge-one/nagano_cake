<div class="container change-pass-main">
  <div class="col-lg-5 col-lg-offset-1">

<h4>パスワードを変更する</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <table class="table change-pass-table">
    <tr>
      <div class="change-pass-field">
        <th><%= f.label :'メールアドレス' %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </div>
    </tr>

    <tr>
      <div class="change-pass-field">
        <th><%= f.label :現在のパスワード %></th>
        <td><%= f.password_field :current_password, autocomplete: "current-password" %></td>
      </div>
    </tr>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <tr>
      <div class="change-pass-field">
        <th><%= f.label :'新しいパスワード' %></th>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上のパスワードを入力</em>
          <% end %>
        </td>
      </div>
    </tr>

    <tr>
      <div class="change-pass-field">
        <th><%= f.label :'新しいパスワードの確認' %></th>
        <td>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />
          <i>念のためもう一度ご入力ください</i>
        </td>
      </div>
    </tr>

  </table>

    <div class="password-change-actions">
      <%= f.submit "変更",class: "btn btn-danger" %><br />
    </div>

<% end %>


  <%= link_to "マイページへ戻る", :back %>

  </div>
</div>