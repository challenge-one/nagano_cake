<div class="container">
  <div class="col-lg-offset-2">
  <div class="sign_in_title">
    <h4>新規会員登録</h4>
  </div>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

  <table class="sign_in_table">
    <tr>
      <div class="field">
        <td><%= f.label :名前 %></td>
        <td>(姓)</td>
        <td><%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %></td>
        <td>(名)</td>
        <td><%= f.text_field :first_name, autocomplete: "first_name" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
          <td><%= f.label :フリガナ %></td>
          <td>(セイ)</td>
          <td><%= f.text_field :family_rubi, autocomplete: "family_rubi" %></td>
          <td>(メイ)</td>
          <td><%= f.text_field :first_rubi, autocomplete: "first_rubi" %><td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td><%= f.label :メールアドレス %></td>
        <td></td>
        <td><%= f.email_field :email, autocomplete: "email" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :postcode, autocomplete: "postcode" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td><%= f.label :住所 %></td>
        <td></td>
        <td colspan="4"><%= f.text_field :address, autocomplete: "address", :size=>"60" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td><%= f.label :"電話番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :tell, autocomplete: "tell" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td><%= f.label :"パスワード(6文字以上)" %></td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td><%= f.label :"パスワード(確認用)" %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </div>
    </tr>

  </table>

    <div class="actions_button, col-lg-offset-4">
      <%= f.submit "新規登録", class: "col-lg-3 btn btn-success" %></br>
    </div>

  <% end %>


    <div class="sign_in_title">
      <h4>既に登録済みの方</h4>
    </div>
    <div class="col-lg-offset-1">
      <%= render "customers/shared/links"%>
    </div>
  </div>
</div>