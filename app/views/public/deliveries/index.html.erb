<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<div class="deliveries_title">
				<h4>配送先登録/一覧</h4>
			</div>
			<div class="row">
				<%= form_for @delivery, url: public_deliveries_path, method: :post do |f| %>
					<table class="table_deliveries_new">
						<tr>
							<td>郵便番号(ハイフンなし)</td>
							<td><%= f.text_field :postcode, autofocus: true %></td>
						</tr>
						<tr>
							<td>住所</td>
							<td><%= f.text_field :address, autofocus: true %></td>
						</tr>
						<tr>
							<td>宛名</td>
							<td><%= f.text_field :addressee, autofocus: true %></td>
							<td><%= f.submit "登録する", class: "btn btn-success" %></td>
						</tr>
					</table>
				<% end %>
			</div>
			<div class="row">
				<table class="table table-bordered table-condensed">
					<thead>
						<tr class="active">
							<th>郵便番号</th>
							<th>住所</th>
							<th>宛名</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					<% @deliveries.each do |delivery| %>
						<tr>
							<td><%= delivery.postcode %></td>
							<td><%= delivery.address %></td>
							<td><%= delivery.addressee %></td>
							<td><%= link_to "編集する",edit_public_delivery_path(delivery), class: "btn btn-primary" %>
								<%= link_to "削除する", public_delivery_path(delivery), method: :delete, class: "btn btn-danger" %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>