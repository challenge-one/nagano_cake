<div class ="container" style= "width:50%;">
<div class="col-lg- offset-1 space">

  <div class="row">
    <div class="col-lg-6">
      <h3 style = "color: navy"><strong>注文情報入力</strong></h3>
    </div>
  </div>

  <%= form_with(model: @order, local: true, url: {action: 'confirm'}) do |f| %>

  <!-- 支払方法 -->
  <div class="row space">
    <h3 style = "color: navy">支払方法</h3>
  </div>

  <div class="row" style = "padding-left:0;">
    <div class="col-lg-3 btn-group" data-toggle="buttons">
      <label>
        <%= f.radio_button :cash_method, :クレジットカード, {checked: true} %> クレジットカード
      </label>
      <label>
        <%= f.radio_button :cash_method, :銀行振込, {} %> 銀行振込
      </label>
    </div>
  </div>

  <!-- お届け先 -->
  <div class="row space">
    <h3 style = "color: navy">お届け先</h3>
  </div>
  <!-- 自身の住所 -->
  <div class="row">
    <p>
      <label><%= f.radio_button :@add, 1, checked: true, checked: "checked" %>ご自身の住所</label><br>
      <%= @customer.postcode %>
      <%= @customer.address %>
      <%= @customer.fullname %>
    </p>
  </div>

  <!-- 登録済み住所 -->
  <div class="row space-sm">
    <p>
      <label><%= f.radio_button :@add ,2, style: "display: inline-block" %>登録済住所から選択</label><br>
    <%= f.collection_select :id, @customer.deliveries, :id, :address %>
    </p>
  </div>

  <!-- 新しい住所 -->
  <div class="row space-sm">
    <p><label><%= f.radio_button :@add, 3 %>新しいお届け先</label></p>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-3">
          <strong>郵便番号(ハイフンなし)</strong>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :postcode, class: 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <strong>住所</strong>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <strong>宛名</strong>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :addressee, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
  <!-- お届け先ここまで -->

  <div class="row space" style = "padding-left:30px; ">
    <div class="col-lg-2 offset-lg-7">
      <%= f.submit "確認画面へ進む", class: "btn-lg btn-success"%>
    </div>
  </div>

  <% end %>
</div>
</div>