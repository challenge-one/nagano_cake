<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<%= render "public/genres/index", genres: @genres %>
		</div>
		<div class="col-xs-10">
			<div class="row">
				<div class="col-xs-12">
					<%= attachment_image_tag @product, :image, size:"400x200",format: 'jpeg' %>
					<div style="display: inline-block;">
					<h2><%= @product.name %></h2>
					<p class="production-text"><%= @product.introduction %></p>
					<h3>¥<%= price_include_tax(@product.price) %><span>(税込)</span></h3>
					</div>
				</div>
			</div>
			<div class="row">
				<!-- ここから個数選択、カート登録未実装 -->
				<div class="col-xs-offset-6 col-xs-3">
					<div class="btn-group">
						<a href="#" class="btn btn-default">個数選択</a>
						<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu">
						<li role="presentation"><a role="menuitem" tabindex="-1" href="#">1</a></li>
						<li role="presentation"><a role="menuitem" tabindex="-1" href="#">2</a></li>
						<li role="presentation"><a role="menuitem" tabindex="-1" href="#">3</a></li>
						<li role="presentation"><a role="menuitem" tabindex="-1" href="#">4</a></li>
						<li role="presentation"><a role="menuitem" tabindex="-1" href="#">5</a></li>
					</ul>
					</div>
				</div>
				<div class="col-xs-3">
					<%= link_to "カートに入れる", public_cart_items_path,method: :post,class: "btn btn-info" %>

				<!---->
					<%= form_with @cart_items, model: [@cart_items],  url: public_cart_items_path,method: :post do |form| %>

					<% end %>
				<!---->

				</div>
			</div>
		</div>