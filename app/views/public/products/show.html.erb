<div class="container">
	<div class="row">
		<div class="col-xs-2">

			<%= render "public/genres/index", genres: @genres %>
		</div>
		<div class="col-xs-10">

			<div class="row">
				<div class="col-xs-7">
					<%= attachment_image_tag @product, :image, size:"400x200",format: 'jpeg' %>
				</div>

				<div class="col-xs-5">
					<h2 style="margin-top: 0;"><%= @product.name %></h2>
					<p class="production-text"><%= @product.introduction %></p>

					<h3>¥<%= price_include_tax(@product.price).to_s(:delimited) %><span>(税込)</span></h3>

				</div>
			</div>

				<div class="row">
					<%= form_with model: @cart_item ,local: true, url: public_cart_items_path(@cart_item) do |f| %>
						<div class="col-xs-offset-6 col-xs-2">
							<%= f.number_field :number, min: 1, max: 10 %>個
						</div>
						<%= f.hidden_field :product_id, value: @product.id  %>
						<div class="col-xs-3">
							<%= f.submit "カートに入れる", class: "btn btn-info" %>
						</div>
					<% end %>
				</div>

			</div>
		</div>