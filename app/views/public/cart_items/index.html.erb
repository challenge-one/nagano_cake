<div class="container main_container">
	<table class="cart_title">
		<tr>
			<td><h3>ショッピングカート</h3></td>
			<td><%= link_to "カートを空にする", public_cart_items_destroy_all_path, class: "btn btn-danger" %></td>
		</tr>
	</table>

	<table class="table table-bordered">
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>

		<% @cart_items.each do |cart_item| %>
			<tr>
				<th><%= @cart_items.product.name %></th>
				<th><%= @cart_items.product.price %></th>
				<th>
					<!--ここに数量のform-->
					<%= link_to "変更", public_cart_item_path, method: :update, class: "btn btn-primary" %>
				</th>
				<th>
					<!--数量×価格の計算どうする？-->
				</th>
				<th><%= link_to "削除する", public_cart_item_path, method: :delete, class: "btn btn-danger" %></th>
			</tr>
		<% end %>
	</table>

	<table class="table table-bordered price_table">
		<tr width="100" >
			<th>合計金額</th>
			<td></td>
		</tr>
	</table>


	<%= link_to "買い物を続ける", public_products_path, class: "btn btn-primary" %></br>

	<div class="to_order_button">
		<%= link_to "情報入力へ進む", public_cart_items_path, class: "btn btn-success" %>
	</div>

</div>
