<div class="container main_container">
	<table class="cart_title">
		<tr>
			<td><h3>ショッピングカート</h3></td>
			<td><%= link_to "カートを空にする(実装予定)", public_cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %></td>
		</tr>
	</table>

	<table class="table table-bordered">
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>

		<% @sum = 0 %>
		<% @cart_items.each do |cart_item| %>
			<tr>
				<th><%= cart_item.product.name %></th>
				<th><%= (cart_item.product.price * 1.10).floor(0) %></th>
				<th>
					<!--ここに数量のform-->
					<%= form_for(cart_item, url: public_cart_item_path(cart_item.id)) do |f| %>
						<%= f.hidden_field :product_id %>
						<%= f.number_field :number %>個
						<%= f.submit "変更(実装予定)", class: "btn btn-primary" %>
					<% end %>
				</th>
				<th>
					<%= (cart_item.product.price * cart_item.number * 1.10).floor(0) %>
				</th>
				<th><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></th>
			</tr>
			<% @sum += (cart_item.product.price * cart_item.number * 1.10).floor(0) %>
		<% end %>
	</table>

	<table class="table table-bordered price_table">
		<tr width="100" >
			<th>合計金額</th>
			<td><%= @sum %>  円</td>
		</tr>
	</table>

	<%= link_to "買い物を続ける", public_products_path, class: "btn btn-primary" %></br>

	<div class="to_order_button">
		<%= link_to "情報入力へ進む", new_public_order_path, class: "btn btn-success" %>
	</div>

</div>
