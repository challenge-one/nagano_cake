
<div class="container main_container">


	<table class="button_table">
		<tr>
			<td><h3>登録情報</h3></td>
			<td><%= link_to "編集する", edit_public_customers_path(@customer), class: "btn btn-primary" %></td>
			<td><%= link_to "パスワードを変更する(仮)", edit_public_customers_path(@customer), class: "btn btn-primary" %></td>
		</tr>
	</table>



<table class="table table-bordered">

	<tr>
		<th>氏名</th>
		<td><%= current_customer.family_name %> <%= current_customer.first_name %></td>
	</tr>
	<tr>
		<th>カナ</th>
		<td><%= current_customer.family_rubi %> <%= current_customer.first_rubi %></td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td><%= current_customer.postcode %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= current_customer.address %></td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td><%= current_customer.tell %></td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td><%= current_customer.email %></td>
	</tr>

</table>


	<table class="button_table">
		<tr>
			<td><h3>配送先</h3></td>
			<td><%= link_to "一覧を見る", public_deliveries_path, class: "btn btn-primary" %></td>
		</tr>
		<tr>
			<td><h3>注文履歴</h3></td>
			<td><%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary" %></td>
		</tr>
	</table>