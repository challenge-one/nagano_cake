<% if @customer.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
      <li class="error-message"><%= message %></li>
      <% end %>
      </ul>
  </div>
  <% end %>
<div class="container">
  <div class="row">
    <div class="col-offset-2 col-xs-10">
      <div class="row">
        <div class="col-xs-3">
            <h4><%= @customer.family_name + @customer.first_name %>さんの会員情報編集</h4>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-3">
          <%= form_for @customer,url: admin_customer_path,method: :patch do |f| %>
          <p class="customer-label">会員ID</p>
          <p class="customer-label"><%= f.label :family_name, "氏名" %></p>
          <p class="customer-label" ><%= f.label :first_name,"フリガナ" %></p>
          <p class="customer-label"><%= f.label :postcode,"郵便番号" %></p>
          <p class="customer-label"><%= f.label :address,"住所" %></p>
          <p class="customer-label"><%= f.label :tell, "電話番号" %></p>
          <p class="customer-label"><%= f.label :email,"メールアドレス" %></p>
          <p class="customer-label"><%= f.label :status,"会員ステータス" %></p>
        </div>

        <div class="col-xs-9">
            <p class="customer-id"><%= @customer.id %></p>
            <p class="customer-label">
            <%= f.text_field :family_name %>
            <span><%= f.text_field :first_name %></span>
            </p>
            <p class="customer-label">
            <%= f.text_field :family_rubi %>
            <span><%= f.text_field :first_rubi %></span>
            </p>
            <p class="customer-label">
            <%= f.text_field :postcode, autocomplete: "postcode" %>
            </p>
            <p class="customer-label">
             <%= f.text_field :address,size: 60 %>
            </p>
            <p class="customer-label"><%= f.text_field :tell, autocomplete: "tell" %>
            </p>
            <p class="customer-label">
              <%= f.email_field :email, autocomplete: "email" %>
            </p>
            <p class="customer-label">
              <%= f.radio_button :status, true %>有効
              <%= f.radio_button :status, false %>無効
            </p>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-3">
            <%= f.submit "変更を保存する",url: admin_customer_path(@customer),method: :patch,class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>