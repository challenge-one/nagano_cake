<div class="container">
	<div class="row">
		<div class="col-xs-10 col-offset-1">

  		<div class="row">
  			<div class="col-xs-offset-2 col-xs-2">
  	  		<h4>注文履歴詳細</h4>
  	  		</div>
  		</div>

  		<div class="row">
  			<div class="col-xs-10">
  				<div class="field">
  					<div class="col-xs-4">購入者</div>
  					<div class="col-xs-8"><%= @order.addressee %></div>
  				</div>
  				<div class="field">
  					<div class="col-xs-4">配送先</div>
  					<div class="col-xs-8"><%= @order.address %></div>
  				</div>
  				<div class="field">
  					<div class="col-xs-4">支払い方法</div>
  					<div class="col-xs-8"><%= @order.cash_method %></div>
  				</div>
  				<%= form_for(@order, url: admin_order_path, method: :patch) do |f| %>
  					<div class="col-xs-4">注文ステータス</div>
  					<div class="col-xs-6">
  						<%= f.select :status,[["wait", 0], ["confirmation", 1], ["creating", 2], ["set_delivery", 3], ["deliveried", 4]], {}, {class: "status"} %>
  					</div>
  					<div class="col-xs-2"><%= f.submit "更新", class: "btn btn-primary" %></div>
  				<% end %>
  			</div>
  		</div>

  		<div class="row">
  			<div class="col-xs-9">
  				<table class="table table-condensed">
  					<thead>
  						<tr>
  							<th>商品名</th>
  							<th>単価(税込)</th>
  							<th>数量</th>
  							<th>小計</th>
  							<th>制作ステータス</th>
  							<th></th>
  						</tr>
  					</thead>
  					<tbody>
  						<% sum_all = 0 %>
  						<%= @order_items.each do |order_item| %>
  						<tr>
  							<td><%= order_item.product.name %></td>
  							<td><%= tax_price(order_item.purchased_price) %></td>
  							<td><%= order_item.number %></td>
  							<td><%= sum_total = tax_price(order_item.purchased_price).to_i * order_item.number %>
  								<% sum_all += sub_total %>
  							</td>
  							<%= form_for(@order, url: admin_order_path, method: :patch) do |f| %>
  							<td>
  								<%= f.select :status,[["wait", 0], ["confirmation", 1], ["creating", 2], ["set_delivery", 3], ["deliveried", 4]], {}, {class: "status"} %>
  							</td>
  							<td><%= f.submit "更新", class: "btn btn-primary" %></td>
  							<% end %>
  						</tr>
  						<% end %>
  					</tbody>
  				</table>
  			</div>

  			<div class="col-xs-3">
  				<table class="table table-hover">
  					<tr>
  						<th>商品合計</th>
  						<td><%= sum_all %>円</td>
  					</tr>
  					<tr>
  						<th>配送料</th>
  						<td><%= @order.postage %>円</td>
  					</tr>
  					<tr>
  						<th>請求金額合計</th>
  						<td><%= sum_all + @order.postage.to_i %>円</td>
  					</tr>
  				</table>
  			</div>
  		</div>

  		</div>
	</div>
</div>