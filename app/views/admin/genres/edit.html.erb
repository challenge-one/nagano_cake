<div class="container">
	<div class="row">
		<div class="col-xs-offset-2">
			<h4>ジャンル編集</h4>
		</div>
		<p></p>
		<div class="row">
			<div class="col-xs-offset-1">
				<%= form_for @genre,url: admin_genre_path,method: :patch do |f| %>
				<span>ジャンル</span>
				<%= f.text_field :name %>
				<%= f.collection_radio_buttons :status, Genre.statuses_i18n, :first ,:last %>
				<%= f.submit "変更を保存する",class: "btn btn-info" %>
				<% end %>
	</div>
</div>
