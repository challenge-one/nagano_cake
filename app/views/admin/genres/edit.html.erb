<div class="container">
	<div class="row">
		<div class="col-offset-2">
			<div class="row">
				<div class="col-xs-3">
					<h4>ジャンル編集</h4>
				</div>
			</div>

			<div class="row">
				<div class="col-xs-12">
					<%= form_for @genre,url: admin_genre_path,method: :patch do |f| %>
					ジャンル
					<%= f.text_field :name %>
					<%= f.radio_button :status ,true %>有効
					<%= f.radio_button :status ,false %>無効
					<%= f.submit "変更を保存する",class: "btn btn-info" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
