<div class="container">
	<div class="row">
		<div class="col-xs-offset-2">
			<h4>ジャンル一覧・追加</h4>
		</div>
		<p></p>
		<div class="row">
			<div class="col-xs-offset-1">
				<%= form_for @genre,url: admin_genres_path,method: :post do |f| %>
				<span>ジャンル</span>
				<%= f.text_field :name %>
				<%= f.collection_radio_buttons :status, Genre.statuses_i18n, :first ,:last %>
				<%= f.submit "追加",class: "btn btn-info" %>
				<% end %>
			<div class="row">
				<div class="col-xs-4">
				<table class="table table-default">
					<thead>
						<tr>
							<th>ジャンル</th>
							<th>状態</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<!-- gem enum_helpを使用すると -->
							<td><%= genre.status_i18n %></td>
							<td><%= link_to"編集する",edit_admin_genre_path(genre),class: "btn btn-primary" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			</div>
			</div>
			</div>
		</div>
</div>
