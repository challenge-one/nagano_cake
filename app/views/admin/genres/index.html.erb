<div class="container">
	<div class="row">
			<h4 class="col-xs-offset-2 col-xs-3">ジャンル一覧・追加</h4>
	</div>

	<div class="row">
		<div class="col-xs-offset-1">
			<%= form_for @genre,url: admin_genres_path,method: :post do |f| %>
			<span>ジャンル</span>
			<%= f.text_field :name,class: "genreform" %>
			<%= f.radio_button :status ,true %>有効
			<%= f.radio_button :status ,false %>無効
			<%= f.submit "追加",class: "btn btn-info addbtn" %>
			<% end %>
		</div>
	</div>

		<div class="row">
			<div class="col-xs-offset-1 col-xs-4">
			<table class="table table-default">
				<thead>
					<tr class="active">
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<!-- gem enum_helpを使用すると -->
						<td><%= genre.status_i18n %></td>
						<td><%= link_to"編集する",edit_admin_genre_path(genre),class: "btn btn-primary" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			</div>
		</div>
</div>
